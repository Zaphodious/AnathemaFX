<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="preview-box-large" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="previewImage" fitHeight="200.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true" styleClass="preview-large-image" />
      <Label fx:id="previewTitle" alignment="BOTTOM_LEFT" maxWidth="-Infinity" minWidth="-Infinity" styleClass="preview-large-title" text="Magnus the Magnificent" wrapText="true" />
      <Label fx:id="previewSubTitle" alignment="BOTTOM_LEFT" maxWidth="-Infinity" minWidth="-Infinity" styleClass="preview-large-subtitle" text="Solar Twilight" />
      <Label fx:id="previewDescription" alignment="BOTTOM_LEFT" maxWidth="-Infinity" minWidth="-Infinity" styleClass="preview-large-description" text="Lore Supernal" wrapText="true" />
   </children>
</VBox>
